# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here

# Database
DATABASE_URL=sqlite:///hn_hidden_gems.db

# APIs
OPENAI_API_KEY=your-openai-api-key

# Background Collection Service
POST_COLLECTION_INTERVAL_MINUTES=5
POST_COLLECTION_BATCH_SIZE=25
POST_COLLECTION_MAX_STORIES=500

# Email Notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@hnhiddengems.com

# Discord Webhook
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-url

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your-slack-webhook

# Application Settings
KARMA_THRESHOLD=50
MIN_INTEREST_SCORE=0.5
POLL_INTERVAL_SECONDS=60
MAX_POSTS_PER_POLL=100

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log